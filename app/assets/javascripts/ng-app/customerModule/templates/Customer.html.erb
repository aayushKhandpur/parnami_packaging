<%= stylesheet_link_tag "homecss" %>
<div class="container-fluid">
	<div style="border-bottom: 1px solid #EEEEEE;">
		<h3>Customers</h3>
	</div>
	<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
		<back-button data-toggle="tooltip" title="Click this button to go to previous screen"></back-button>
		<button data-toggle="tooltip" title="Click this button to create new Customer" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="showNewCustomer()" ng-show="showList"><i class="fa fa-plus-square"></i></button>
		<button data-toggle="tooltip" title="Click this button to create save Customer" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="createCustomer()" ng-show="findView == 'showSaveWithNewCustomer' || findView == 'showSaveWithOldCustomer'"><i class="fa fa-save"></i></button>
		<button data-toggle="tooltip" title="Click this button to create edit Customer" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="editCustomer()" ng-show="findView == 'showeditandview' "><i class="fa fa-edit"></i></button>
	</div>
	<div ng-show="findView == 'showeditandview'">
		<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
			<h4>Details of Customer</h4>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Customer Name:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.name}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Customer Email:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.email_id}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Mobile Number:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.mobile_number}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Landline Number:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.landline_number}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Alternate Number:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.alternate_number}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Office Number:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.office_number}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Billing Name:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.billing_name}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Billing Address:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.billing_address}}</label>
			</div>
		</div>
	</div>
	<div ng-show="findView == 'showSaveWithNewCustomer' || findView == 'showSaveWithOldCustomer'">
		<div class="alert alert-danger col-md-12" ng-show="customerErrorMsg.length > 0">
			<span style="color:#cc0000"><h4>Errors</h4></span>
			<span ng-bind-html="customerErrorMsg | sanitize"><p>{customerErrorMsg}}</p></span>
		</div>

		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Customer Name</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.name"/>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Customer Email</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.email_id"/>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Mobile Number</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.mobile_number"/>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Landline Number</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.landline_number"/>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Alternate Number</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.alternate_number"/>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Office Number</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.office_number"/>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Billing Name</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.billing_name" />
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<div class="profile-info-row">
					<div class="profile-info-name">Billing Address</div>
					<div class="profile-info-value">
						<textarea rows="4" class="form-control" ng-model="masterProduct.billing_address" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<br />
	<div style="border-bottom: 1px solid #EEEEEE;" ng-show="showList">
		<h3>All Customers</h3>
	</div>
	<div class="row" ng-show="allMasterProducts.length != 0 && showList">
		<div class="col-md-12">
			<table class="table table-striped table-hover">
				<tr>
					<th>Customer Id</th>
					<th>Customer Name</th>
					<th>Email</th>
					<th>Mobile Number</th>
					<th>Billing Name</th>
				</tr>
				<tr ng-repeat="master in allMasterProducts">
					<td><a href="javascript:void(0)" ng-click="showMasterProduct(master.id)">{{master.id}}</a></td>
					<td>{{master.name}}</td>
					<td>{{master.email_id}}</td>
					<td>{{master.mobile_number}}</td>
					<td>{{master.billing_name}}</td>
				</tr>
			</table>
		</div>
	</div>
</div>
