<%= stylesheet_link_tag "homecss" %>
<div class="container-fluid">
	<div style="border-bottom: 1px solid #EEEEEE;">
		<h3>Master Products</h3>
	</div>
	<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
		<back-button data-toggle="tooltip" title="Click this button to go to previous screen"></back-button>
		<button data-toggle="tooltip" title="Click this button to create new Product" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="showNewProduct()" ng-show="showList"><i class="fa fa-plus-square"></i></button>
		<button data-toggle="tooltip" title="Click this button to create save Product" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="createMasterProduct()" ng-show="findView == 'showSaveWithNewProduct' || findView == 'showSaveWithOldProduct'"><i class="fa fa-save"></i></button>
		<button data-toggle="tooltip" title="Click this button to create edit Product" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="editProduct()" ng-show="findView == 'showeditandview' "><i class="fa fa-edit"></i></button>
	</div>
	<div ng-show="findView == 'showeditandview'">
		<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
			<h4>Details of Location</h4>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Product Name:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.name}}</label>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Product Description:</label>
			</div>
			<div class="col-md-3">
				<label>{{masterProduct.description}}</label>
			</div>
		</div>
	</div>
	<div ng-show="findView == 'showSaveWithNewProduct' || findView == 'showSaveWithOldProduct'">
		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Product Name</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="masterProduct.name" />
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Product Description</div>
					<div class="profile-info-value">
						<textarea rows="4" class="form-control" ng-model="masterProduct.description" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<br />
	<div style="border-bottom: 1px solid #EEEEEE;" ng-show="showList">
		<h3>All Master Products</h3>
	</div>
	<div class="row" ng-show="allMasterProducts.length != 0 && showList">
		<div class="col-md-12">
			<table class="table table-striped table-hover">
				<tr>
					<th>Product Name</th>
					<th>Product Description</th>
				</tr>
				<tr ng-repeat="master in allMasterProducts">
					<td><a href="javascript:void(0)" ng-click="showMasterProduct(master.id)">{{master.name}}</a></td>
					<td>{{master.description}}</td>
				</tr>
			</table>
		</div>
	</div>
</div>