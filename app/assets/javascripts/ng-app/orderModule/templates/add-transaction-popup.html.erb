<style media="screen">

  .valdr-message {
    display: none;
  }

  .valdr-message.ng-invalid.ng-touched.ng-dirty,
  .form-submitted .valdr-message.ng-invalid {
    display: inline;
    color: red;
    margin-top: -2px;
  }

  .form-group {
    margin-bottom: 8px;
  }
</style>
<div ng-class="{ 'form-submitted': formSubmitted }">
  <form >
    <div class="modal-header">
        <button type="button" id="btnCloseModel" class="close" ng-click="cancel()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <span><h3 class="modal-title">Add Transaction</h3></span>
    </div>
    <div class="modal-body">
    	<div class=" well">
    		<form class="form-horizontal">

    				<div class="form-group">
    					<label>Quantity Wasted</label>
    					<input type="number"class="form-control"></input>
    				</div>
    				<div class="form-group">
    					<label>Quantity Forwarded</label>
    					<input type="number" class="form-control"></input>
    				</div>
    			</form>
    	</div>
    </div>

    <div class="modal-footer">

        <button  type="submit" class="btn btn-primary" ng-click="">
            <span class="fa fa-save"> Save</span>
        </button>
        <button type="button" id="btnCancelModel" class="btn btn-default" ng-click="cancel()"><i class="fa fa-times"></i> Cancel</button>
    </div>
    </form>
</div>
