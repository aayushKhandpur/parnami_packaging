<div>
  <div class="row" style="border-bottom: 1px solid #EEEEEE;">
    <div class="col-md-6">
      <h3>Transactions</h3>
    </div>
    <!-- <div class="col-md-6" style="text-align:right">
      <button class="btn btn-default" ng-click="addTransactionModel(orderTransactionList)">Add transaction</button>
    </div> -->
  </div>
  <div class="col-md-12 alert alert-danger" role="alert" ng-show="orderTransactionList.length == 0" style="margin-top:1%;margin-bottom:1%;">
    <label style="font-weight:normal;">No transactions added.</label>
  </div>
  <div class="alert alert-danger col-md-12" ng-show="orderPlanErrorMsg.length > 0">
    <span style="color:#cc0000"><h4>Errors</h4></span>
          <span ng-bind-html="orderPlanErrorMsg | sanitize"><p>{{orderPlanErrorMsg}}</p></span>
      </div>
  <br />
  <div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
    <table ng-hide="orderTransactionList.length == 0" class="table table-striped table-hover">
      <tr>
        <th>Order Id</th>
        <th>Location</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Quantity Received</th>
        <th>Quantity Forward</th>
        <th>Quantity Transfered</th>
        <th>Quantity Waste</th>
        <th>Status</th>
        <th>Move</th>
      </tr>
      <tr ng-repeat="orderTransaction in orderTransactionList">
        <td>{{orderTransaction.order_transaction.order_id}}</td>
        <td>{{orderTransaction.order_transaction.lName}}</td>
        <td>{{orderTransaction.order_transaction.process_start_date | date:'dd-MM-yyyy'}}</td>
        <td>{{orderTransaction.order_transaction.process_end_date | date:'dd-MM-yyyy'}}</td>
        <td>{{orderTransaction.order_transaction.quantity_recieved}}</td>
        <td>{{orderTransaction.order_transaction.quantity_forwarded}}</td>
        <td>{{orderTransaction.order_transaction.quantity_transfered}}</td>
        <td>{{orderTransaction.order_transaction.quantity_waste}}</td>
        <td><span class="label" ng-class="orderTransaction.order_transaction.status == 'In Process' ? 'label-info' : 'label-success'">{{orderTransaction.order_transaction.status}}</span></td>
        <td ng-if="orderTransaction.order_transaction.status == 'In Process'" style="text-align:center;"><a href="" ng-click="addTransactionModel(orderTransaction,$index)"><i class="fa fa-check-square-o" aria-hidden="true" style="color:black;"></i></i></a></td>
      </tr>
    </table>
  </div>
</div>
<%= javascript_include_tag "homejs" %>
