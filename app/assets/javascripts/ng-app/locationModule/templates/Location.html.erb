<%= stylesheet_link_tag "homecss" %>
<div class="container-fluid">
	<div style="border-bottom: 1px solid #EEEEEE;">
		<h3>Location</h3>
	</div>
	<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
		<back-button></back-button>
		<button class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="createLocation()" ng-show="!isLocationShown"><i class="fa fa-save"></i></button>
		<button class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="isLocationShown = false" ng-show="isLocationShown"><i class="fa fa-edit"></i></button>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="profile-info-row">
				<div class="profile-info-name">Location Name</div>
				<div class="profile-info-value">
					<input type="text" class="form-control" ng-model="location.name" ng-disabled="isLocationShown"/>
				</div>
			</div>
		</div>
	</div>
	<br />
	<div style="border-bottom: 1px solid #EEEEEE;">
		<h3>All Locations</h3>
	</div>
	<div class="row" ng-hide="allLocations.length == 0">
		<div class="col-md-6">
			<table>
				<tr>
					<th>Location Name</th>
				</tr>
				<tr ng-repeat="location in allLocations">
					<td><a href="javascript:void(0)" ng-click="showLocation(location.id)">{{location.name}}</a></td>
				</tr>
			</table>
		</div>
	</div>
</div>