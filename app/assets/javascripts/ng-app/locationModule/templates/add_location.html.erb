<%= stylesheet_link_tag "homecss" %>
<style media="screen">

    .valdr-message {
        display: none;
    }

    .form-submitted .valdr-message.ng-invalid,
    .valdr-message.ng-invalid.ng-touched.ng-dirty {
        display: inline;
        color: red;
        margin-top: -2px;
    }

    .form-group {
        margin-bottom: 8px;
    }

</style>
<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
  <back-button data-toggle="tooltip" title="Click this button to go to previous screen"></back-button>
  <button data-toggle="tooltip" title="Click this button to create save Location" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="createLocation(form)"><i class="fa fa-save"></i></button>
</div>
<div class="row">
    <div ng-class="{ 'form-submitted': formSubmitted }">
        <form name="form" valdr-type="LocationUpdate" novalidate on-navigate-away-strategy='none'>
            <div class="col-md-3">
                <div class="profile-info-row">
                    <div class="profile-info-name">Location Name</div>
                    <div valdr-form-group class="profile-info-value">
                        <input type="text" name="name" class="form-control" ng-model="location.name"/>
                        <span ng-show="errorMsg.length!=0 && location.name!=null" style="color:red;">{{errorMsg}}</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
