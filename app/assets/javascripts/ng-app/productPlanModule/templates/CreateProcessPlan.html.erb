<%= stylesheet_link_tag "homecss" %>
<div class="container-fluid">
	<div style="border-bottom: 1px solid #EEEEEE;">
		<h3>Order Delivery Plan</h3>
	</div>
	<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
		<!--<button class="btn btn-default col-md-1" ng-click="goBackToPrevious()"><i class="fa fa-level-up fa-rotate-270"></i></button>-->
		<back-button></back-button>
		<button class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="createPlan()"><i class="fa fa-save"></i></button>
		<button class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="editPlan()"><i class="fa fa-edit"></i></button>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="profile-info-row">
				<div class="profile-info-name">Quantity</div>
				<div class="profile-info-value">
					<input type="text" class="form-control" ng-model="orderPlan.quantity" ng-disabled="isPlanShown"/>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="profile-info-row">
				<div class="profile-info-name">Delivery Date</div>
				<div class="profile-info-value">
					<div class='input-group date' id='datetimepicker1'>
						<input type='text' class="form-control" ng-model="orderPlan.delivery_date" ng-disabled="isPlanShown"/>
						<span class="input-group-addon">
						<span class="fa fa-calendar"></span>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div ng-show="isPlanShown">
		<div style="border-bottom: 1px solid #EEEEEE;">
			<h3>Order Delivery Plan Status</h3>
		</div>
		<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
			<!--<button class="btn btn-default col-md-1" ng-click="goBackToPrevious()"><i class="fa fa-level-up fa-rotate-270"></i></button>-->
			<back-button></back-button>
			<button class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="createPlanStatus()"><i class="fa fa-save"></i></button>
			<button class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="editPlanStatus()"><i class="fa fa-edit"></i></button>
		</div>
		<br />
		<div class="row">
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Location</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="locationName" ng-disabled="isOrderStatusShown"/>
					</div>
				</div>
				<div class="profile-info-row">
					<div class="profile-info-name">Is First Step</div>
					<div class="profile-info-value">
						<input type="checkbox" ng-model="orderPlanStatus.is_first_step" ng-disabled="isOrderStatusShown"/>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Sequence Number</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="orderPlanStatus.sequence_number" ng-disabled="isOrderStatusShown"/>
					</div>
				</div>
				
				<div class="profile-info-row">
					<div class="profile-info-name">Is Last Step</div>
					<div class="profile-info-value">
						<input type="checkbox" ng-model="orderPlanStatus.is_last_step" ng-disabled="isOrderStatusShown"/>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="profile-info-row">
					<div class="profile-info-name">Process Stage</div>
					<div class="profile-info-value">
						<input type="text" class="form-control" ng-model="processName" ng-disabled="isOrderStatusShown"/>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%= javascript_include_tag "homejs" %>

