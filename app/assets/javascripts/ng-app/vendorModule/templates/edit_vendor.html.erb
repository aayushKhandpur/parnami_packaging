<%= stylesheet_link_tag "homecss" %>
<style>
    .header {
        text-transform: uppercase;
        font-weight: bolder;
    }
    .valdr-message {
        display: none;
    }

    .form-submitted .valdr-message.ng-invalid,
    .valdr-message.ng-invalid.ng-touched.ng-dirty {
        display: inline;
        color: red;
        margin-top: -2px;
    }

    .form-group {
        margin-bottom: 8px;
    }

</style>
<div class="col-md-12" style="padding-left:0px;margin-top:1%;margin-bottom:1%;">
    <back-button data-toggle="tooltip" title="Click this button to go to previous screen"></back-button>
    <button data-toggle="tooltip" title="Click this button to create save Vendor" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="updateVendor( form )" ng-show="findView == 'editView'">
        <i class="fa fa-save"></i>
    </button>
    <button data-toggle="tooltip" title="Click this button to create edit Vendor" class="btn btn-default col-md-1" style="margin-left:1%;" ng-click="editVendor()" ng-show="findView == 'detailView' ">
        <i class="fa fa-edit"></i>
    </button>
</div>
<div class="panel panel-default" style="margin-top:70px" ng-show="findView == 'detailView'">
    <div class="panel-heading header">VENDOR DETAIL</div>
    <div class="panel-body">
        <table class="table table-bordered">
            <tr>
                <th style="width:20%">Vendor Name</th>
                <td style="width:30%">{{location.name}}</td>
                <th style="width:20%">Billing Name</th>
                <td style="width:30%">{{location.billing_name}}</td>

            </tr>
            <tr>
                <th>Mobile Number</th>
                <td>{{location.mobile_number}}</td>
                <th>Landline Number</th>
                <td>{{location.landline_number}}</td>
            </tr>
            <tr>
                <th>Alternate Number</th>
                <td>{{location.alternate_number}}</td>
                <th>Office Number</th>
                <td>{{location.office_number}}</td>
            </tr>
            <tr>
                <th>Company Name</th>
                <td>{{location.company_name}}</td>
                <th>Email</th>
                <td>{{location.email_id}}</td>
            </tr>
            <tr>
              <th>Billing Address</th>
              <td colspan="3">{{location.billing_address}}</td>
            </tr>
        </table>
    </div>
</div>

<div ng-show="findView == 'editView' ">
    <div ng-class="{ 'form-submitted': formSubmitted }">
        <form name="form" valdr-type="VendorUpdate" novalidate on-navigate-away-strategy='none'>
            <div class="alert alert-danger col-md-12" ng-show="vendorErrorMsg.length > 0">
                <span style="color:#cc0000">
                    <h4>Errors</h4>
                </span>
                <span ng-bind-html="vendorErrorMsg | sanitize">
                    <p>{vendorErrorMsg}}</p>
                </span>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Vendor Name *</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="name" class="form-control" ng-model="location.name"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Vendor Email</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="email" name="email" class="form-control" ng-model="location.email_id"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Mobile Number *</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="mobileNumber" class="form-control" ng-model="location.mobile_number"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Landline Number</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="landline" class="form-control" ng-model="location.landline_number"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Alternate Number</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="alternateNumber" class="form-control" ng-model="location.alternate_number"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Office Number</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="officeNumber" class="form-control" ng-model="location.office_number"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Billing Name *</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="billingName" class="form-control" ng-model="location.billing_name"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Vendor Company</div>
                        <div valdr-form-group class="profile-info-value">
                            <input type="text" name="vendorCompany" class="form-control" ng-model="location.company_name"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="profile-info-row">
                        <div class="profile-info-name">Billing Address</div>
                        <div valdr-form-group class="profile-info-value">
                            <textarea rows="4" class="form-control" ng-model="location.billing_address"/>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
